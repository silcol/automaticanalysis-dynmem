<?xml version="1.0" encoding="utf-8"?>
<aap>
    <tasklist>
        <currenttask domain='subject' desc='searchlight RDMs for pilab Volume' modality='MRI'>
            
            <qsub>
                <timeBase>0.5</timeBase>
                <memoryBase>0.3</memoryBase>
            </qsub>
            
            <permanenceofoutput>3</permanenceofoutput>

            <distancemetric>corr</distancemetric>
            
            <inputstreams>
                <stream>pilab_volume</stream>
                <stream>pilab_searchlight_spheres</stream>
            </inputstreams>
            <outputstreams>
                <stream>pilab_data_rdms_sess</stream>
                <stream>pilab_data_rdms_mean</stream>
            </outputstreams>
            
        </currenttask>
    </tasklist>
</aap>
